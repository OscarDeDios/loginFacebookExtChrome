{
    "author": "Oscar de Dios",
    "name": "Login Facebook ",
    "version": "1.0",
    "manifest_version": 2,
    "icons": {
        "128": "extensions.png"
    },
    "description": "Ejemplo de facebook login",
    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_title": "Login Facebook",
        "default_icon": {
            "19": "extensions.png"
        },
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs", "https://graph.facebook.com/"
    ]
}